{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/turismo/praias",
        "destination": "/praia.html"
      },
      {
        "source": "**/turismo/historico",
        "destination": "/historico.html"
      },
      {
        "source": "**/turismo/nautico",
        "destination": "/nautico.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
